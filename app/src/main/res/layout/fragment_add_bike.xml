<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".AddBikeFragment"
    android:gravity="center"
    android:layout_gravity="center">



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_profile_textview">

            <TextView
                android:id="@+id/text_View_Bike_Name"
                android:layout_width="@dimen/bikeFragTitleWidth"
                android:layout_height="@dimen/bikeFrageTitleHeight"
                android:gravity="left"
                android:text="Name"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_Text_Bike_Name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bikeFrageTitleHeight"
                android:hint="ex. Bike 1"
                android:inputType="textPersonName" />

        </LinearLayout>



    </FrameLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_profile_textview">

            <TextView
                android:id="@+id/text_View_Bike_Brand"
                android:layout_width="@dimen/bikeFragTitleWidth"
                android:layout_height="@dimen/bikeFrageTitleHeight"
                android:gravity="left"
                android:text="Brand"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_Text_Bike_Brand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bikeFrageTitleHeight"
                android:hint="ex. Schwin"
                android:inputType="textPersonName" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_profile_textview">
            <TextView
                android:id="@+id/text_View_Bike_Model"
                android:layout_width="@dimen/bikeFragTitleWidth"
                android:layout_height="@dimen/bikeFrageTitleHeight"
                android:gravity="left"
                android:text="Model"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edit_Text_Bike_Model"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bikeFrageTitleHeight"
                android:hint="ex. 171802"
                android:inputType="textPersonName" />


        </LinearLayout>

    </FrameLayout>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_profile_textview">

        <TextView
            android:id="@+id/text_View_Bike_WheelDiameter"
            android:layout_width="@dimen/bikeFragTitleWidth"
            android:layout_height="@dimen/bikeFrageTitleHeight"
            android:gravity="left"
            android:text="Wheel Diameter:"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_Text_Wheel_Diameter"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bikeFrageTitleHeight"
            android:hint="ex. 29 (inches)"
            android:inputType="number"
            android:maxLength="2" />

    </LinearLayout>

</FrameLayout>


    <Button
        android:id="@+id/button_addBike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_button_rounded"
        android:layout_margin="5dp"
        android:text="Add"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/shape_button_rounded"
        android:text="Cancel"
        android:textColor="@color/white"/>
</LinearLayout>